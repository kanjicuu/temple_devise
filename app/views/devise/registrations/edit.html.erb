<div class="container">
  <div class="row">
    <div class="col m3 s12">
      <ul class="collection">
        <li class="collection-item grey darken-1"><%= link_to "プロフィールを編集", edit_user_registration_path, class: "white-text" %>
        </li>
        <li class="collection-item"><%= link_to "プロフィールを確認", user_path(current_user.id), class: 'grey-text text-darken-1'%>
        </li>
      </ul>
    </div>

    <div class="col m9 s12">
      <div class="card-panel">
        <h5 class="center">プロフィールの編集</h5>
        <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
          <%= render "shared/devisemes" %>

          <div class="input-field">
            <%= f.email_field :email, autofocus: true, class: "validate", id: "email" %>
            <label for="email">メールアドレス</label>
          </div>

          <div class="input-field">
            <%= f.text_field :fullname,  class: "validate", id: "fullname" %>
            <label for="fullname" class="active">名前</label>
          </div>

          <div class="input-field">
            <%= f.text_area :description, class: "validate materialize-textarea", id: "description" %>
            <label for="description" class="active">自己紹介</label>
          </div>

          <div class="input-field">
            <%= f.text_field :twitter, class: "validate", id: "twitter" %>
            <label for="twitter" class="active">Twitter(@...)</label>
          </div>

          <div class="center">
            <button class="waves-effect waves-light btn-large" type="submit" name="action">更新
            </button>
          </div>

        <% end %>
      </div>
      <br>
      <br>
      <br>
      <div class="card-panel">
        <h5 class="center">Cancel my account</h5>
        <p><%= button_to "アカウントを削除する。", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete %></p>
      </div>
    </div>
  </div>
</div>

<script>
  M.textareaAutoResize($('#description'));
</script>
