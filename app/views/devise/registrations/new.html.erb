<div class="container">
  <div class="row">
    <div class="card-panel login-size">
      <h5 class="center">登録しよう！</h5>
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <%= render "shared/devisemes" %>

        <div class="input-field">
          <%= f.email_field :email, autofocus: true, class: "validate", id: "email" %>
          <label for="email">メールアドレス</label>
        </div>

        <div class="input-field">
          <%= f.password_field :password , class: "validate", id: "password" %>
          <label for="password">パスワード</label>
        </div>

        <div class="input-field">
          <%= f.password_field :password_confirmation , class: "validate", id: "password_confirmation" %>
          <label for="password_confirmation">パスワードの確認</label>
        </div>

        <div class="center">
          <button class="waves-effect waves-light btn-large" type="submit" name="action">登録する
          </button>
        </div>

      <% end %>

      <br>

      <div class="center-align">
        <%= render "devise/shared/links" %>
      </div>

    </div>
  </div>
</div>
