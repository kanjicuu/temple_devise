<div class="container">
  <div class="row">
    <div class="card-panel login-size">
      <h5>パスワードをお忘れですか？</h5>

      <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
        <%= render "shared/devisemes" %>

        <div class="input-field">
          <%= f.email_field :email, autofocus: true, class: "validate", id: "email" %>
          <label for="email">メールアドレス</label>
        </div>


        <div class="center">
          <button class="waves-effect waves-light btn-large" type="submit" name="action">パスワード変更メールを送信
          </button>
        </div>
      <% end %>

      <div class="center-align">
        <%= render "devise/shared/links" %>
      </div>
    </div>
  </div>
</div>
